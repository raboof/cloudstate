<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.akkaserverless.proxy" level="DEBUG"/>

    <!-- We don't want the scalers request debug -->
    <logger name="com.akkaserverless.proxy.autoscaler.KubernetesDeploymentScaler" level="INFO"/>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>